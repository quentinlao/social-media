{
  "name": "create-react-template",
  "description": "A template for creating React applications.",
  "homepage": "https://quentinlao.github.io/crt",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev": "yarn vite --port 3000",
    "build": "yarn tsc -b && yarn vite build",
    "preview": "yarn vite preview --port 3000",
    "lint": "yarn eslint . --ext .ts,.tsx",
    "lint:fix": "yarn eslint . --ext .ts,.tsx --fix",
    "test:unit": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:codegen": "playwright codegen --color-scheme=dark",
    "typecheck": "yarn tsc --noEmit",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:open": "open docs/index.html",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.71.5",
    "@tanstack/react-query-devtools": "^5.71.5",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.5.0",
    "vitest": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@playwright/test": "^1.51.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/gh-pages": "^6",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.20",
    "@types/react-dom": "18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "3.1.1",
    "eslint": "^9.21.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "history": "^5.3.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.1.5",
    "typedoc": "^0.28.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.5"
  }
}
